<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_addatabasetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new food"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_foodname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et_custom"
        android:hint="Food name"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_addatabasetitle"
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"/>

    <EditText
        android:id="@+id/ingredients"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_custom"
        android:hint="Ingredients"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_foodname"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"/>

    <Button
        android:id="@+id/btn_dbadd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_dbcancel"
        app:layout_constraintTop_toBottomOf="@+id/ingredients"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btn_dbcancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_dbadd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredients"
        android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>